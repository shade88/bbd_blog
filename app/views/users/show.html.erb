<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Password:</b>
  <%= @user.password %>
</p>

<p>
  <b>Is admin:</b>
  <%= @user.is_admin %>
</p>

<% @user.blog_messages.each do |post| %>
    <p>
      <b>Post <%= post.id %></b>
      <%= post.text %>
    </p>
   <% end unless @user.blog_messages.empty?%>

<%= link_to 'Create post', new_blog_message_path(:id=> @user.id) %> |
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
